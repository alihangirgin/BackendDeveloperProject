@model List<FormViewModel>

<div class="container mt-4">
    <h2>Form Listesi</h2>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Form Adı</th>
                <th>Açıklama</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var form in Model)
            {
                <tr>
                    <td>@form.Name</td>
                    <td>@form.Description</td>
                    <td>
                        <a href="/forms/@form.Id" class="btn btn-info btn-sm">Form Doldur</a>
                        <button class="btn btn-danger btn-sm" onclick="deleteForm(@form.Id)">Sil</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/forms/create" class="btn btn-primary">Yeni Form Oluştur</a>
</div>

<script>
    function deleteForm(id) {
        if (confirm('Bu formu silmek istediğinizden emin misiniz?')) {
            fetch(`/forms/${id}`, {
                method: 'DELETE',
            })
                .then(response => {
                    if (response.ok) {
                        location.reload();
                    } else {
                        alert('Silme işlemi sırasında bir hata oluştu.');
                    }
                });
        }
    }
</script>
